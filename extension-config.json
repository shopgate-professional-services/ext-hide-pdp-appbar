{
  "version": "1.0.0-rc.2",
  "id": "@shopgate-project/hide-pdp-appbar",
  "configuration": {
    "styles": {
      "type": "admin",
      "destination": "frontend",
      "default": {
        "closeButton": null,
        "cartButton": null,
        "cartBadge": null
      },
      "params": {
        "type": "json" ,
        "label": "Styles settings"
      }
    },
    "showEmptyCartBadge": {
      "type": "admin",
      "destination": "frontend",
      "default": false,
      "params": {
        "type": "checkbox" ,
        "label": "Show cart badge for empty cart"
      }
    }
  },
  "components": [
    {
      "id": "PdpAppBar",
      "type": "portals",
      "target": "app-bar.default",
      "path": "frontend/portals/PdpAppBar"
    }
  ],
  "steps": []
}
